    <style>
        body {
            background-color: papayawhip;
            margin: 0;
            padding: 0;
        }

        /* Sidebar */
        #admin-sidebar {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100vh;
            background-color: #212529;
            color: #ffffff;
            transition: left 0.3s ease;
            z-index: 1050;
        }

            #admin-sidebar.active {
                left: 0;
            }

            #admin-sidebar h5 {
                padding: 15px;
                margin: 0;
                background-color: #007bff;
                text-align: center;
            }

            #admin-sidebar .nav-link {
                color: #ffffff;
                display: flex;
                align-items: center;
                padding: 10px 15px;
            }

        #overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1049;
        }

            #overlay.active {
                display: block;
            }

        /* Dark Mode */
        .dark-mode {
            background-color: #343a40;
            color: #ffffff;
        }

        .toggle-sidebar {
            cursor: pointer;
            font-size: 20px;
        }

        .btn-close {
            background-color: transparent;
            border: none;
            font-size: 16px;
        }

        footer {
            text-align: center;
