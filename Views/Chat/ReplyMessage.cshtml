@{
    ViewData["Title"] = "Reply to Message";
}

<h2>Reply to Message</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">From: @ViewBag.OriginalMessage.Sender</h5>
        <p class="card-text"><strong>Original Message:</strong> @ViewBag.OriginalMessage.Content</p>
    </div>
</div>

<form asp-action="ReplyMessage" method="post">
    <input type="hidden" name="messageId" value="@ViewBag.OriginalMessage.Id" />

    <div class="form-group">
        <label for="content">Your Reply:</label>
        <textarea class="form-control" id="content" name="content" rows="4"></textarea>
        @Html.ValidationMessage("Content", "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-success">Send Reply</button>
</form>
